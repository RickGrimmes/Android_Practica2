<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textSize="60dp"
        android:paddingHorizontal="15dp"
        android:textStyle="bold"
        android:paddingVertical="35dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="146dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="ON"
                android:id="@+id/on"
                android:textSize="30dp" />

            <Button
                android:layout_width="146dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="OFF"
                android:id="@+id/off"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="/"
                android:id="@+id/div"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="0dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="7"
                android:id="@+id/n7"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="8"
                android:id="@+id/n8"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="9"
                android:id="@+id/n9"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="x"
                android:id="@+id/xxxtentacion"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="4"
                android:id="@+id/n4"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="5"
                android:id="@+id/n5"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="6"
                android:id="@+id/n6"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="-"
                android:id="@+id/menos"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="0dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="1"
                android:id="@+id/n1"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="2"
                android:id="@+id/n2"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="3"
                android:id="@+id/n3"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="+"
                android:id="@+id/mas"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="C"
                android:id="@+id/borrar"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="0"
                android:id="@+id/n0"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="."
                android:id="@+id/punto"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="7dp"
                android:text="="
                android:id="@+id/igual"
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>